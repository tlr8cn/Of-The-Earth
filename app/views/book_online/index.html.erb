  <div class="row">

  	 <div class="col-sm-12 selector">
	 	 <select name="shoot-type" id="shoot-type">
	 	 	<option selected disabled>Shoot Type</option>
	 		 <option value="wedding" class="wedding-option">Wedding</option>
	 		 <option value="beautiful-moment" class="beautiful-option">Beautiful Moment</option>
	 	 </select>
	 </div>


 	 <div class="col-sm-12 wedding-selection">
 	 	<h3 class="selection-header">Tell me about your wedding.</h3>
 	 	<br>
 	 	<%= form_tag(controller: "email", action: "create", method: "post", class: "wedding-form") do %>

 	 		<div class="row">
 	 			<div class="col-sm-12">
 	 				<span class="input-text">Wedding Date:</span>
 	 				<input class="centered-input" type="date" name="client[date]">
 	 			</div>
 	 		</div>
			<br>
 	 		<div class="row">
 	 			<div class="col-sm-2"></div>
 	 			<div class="col-sm-4">
 	 			 	<input class="centered-input" type="text" name="client[bridename]" placeholder="Bride's Name" />
 	 			</div>
 	 			<div class="col-sm-4">
 	 				<input class="centered-input" type="text" name="client[groomname]" placeholder="Groom's Name" />
 	 			</div>
 	 			<div class="col-sm-2"></div>
 	 		</div>
			<br>
 	 		<div class="row">
 	 			<div class="col-sm-2"></div>
 	 			<div class="col-sm-4">
 	 				<input class="centered-input" type="text" name="client[weddinglocation]" placeholder="Wedding Location" />
 	 			</div>
 	 			<div class="col-sm-4">
 	 				<input class="centered-input" type="text" name="client[receptionlocation]" placeholder="Reception Location" />
 	 			</div>
 	 			<div class="col-sm-2"></div>
 	 		</div>
			<br>
 	 		<div class="row">
 	 			<div class="col-sm-4">
 	 				<input class="centered-input" type="text" name="client[mailingaddress]" placeholder="Mailing Address" />
 	 			</div>
 	 			<div class="col-sm-4">
 	 				<input class="centered-input" type="text" name="client[email]" placeholder="Email Address" />
 	 			</div>
 	 			<div class="col-sm-4">
 	 				<input class="centered-input" type="tel" name="client[phone]" placeholder="Phone Number" />
 	 			</div>
 	 		</div>
 	 		<br>
 	 		<div class="row">
 	 			<div class="col-sm-6">
 	 				<input type="checkbox" name="client[engagement]"> I would like an engagement shoot
 	 			</div>
 	 			<div class="col-sm-6">
 	 				<input type="checkbox" name="client[bridal]"> I would like a styled bridal shoot 
 	 			</div>
 	 		</div>
 	 		<br>
 	 		<div class="row">
 	 			<div class="col-sm-12">
 	 				<textarea class="centered-input input-fill-container" name="client[about]" cols="40" rows="5" placeholder="A little bit about yourself..."></textarea>
 	 			</div>
 	 		</div>
 	 		<br>
 	 		<div class="row">
 	 			<div class="col-sm-12">
 	 			<input class="centered-input larger-submit" name="client[wedding-send]" type="submit" value="Send" />
 	 			</div>
 	 		</div>

 	 	<% end %>

 	 </div>

 	 <div class="col-sm-12 beautiful-selection">
 	 	<h3>Tell me about your moment.</h3> 
 	 	<br>
 	 	<%= form_tag(controller: "email", action: "create", method: "post", class: "moment-form") do %>


 	 		<div class="row">
 	 			<div class="col-sm-12">
 	 				<input class="centered-input input-fill-container" type="text" name="client[momentname]" placeholder="Moment Needing Captured" />
 	 			</div>
 	 		</div>
 	 		<br>

 	 		<div class="row">
 	 			<div class="col-sm-4">
	 	 			<input class="centered-input" type="text" name="client[clientname]" placeholder="Your Name" />
	 	 		</div>
	 	 		<div class="col-sm-4">
	 	 			<input class="centered-input" type="text" name="client[email]" placeholder="Email Address" />
	 	 		</div>
	 	 		<div class="col-sm-4">
	 	 			<input class="centered-input" type="tel" name="client[phone]" placeholder="Phone Number" />
	 	 		</div>
 	 		</div>
 	 		<br>

 	 		<div class="row">
 	 			<div class="col-sm-12">
 	 				<textarea class="centered-input input-fill-container" name="client[about]" cols="40" rows="5" placeholder="Details pertaining to your special moment..."></textarea>
 	 			</div>
 	 		</div>
 	 		<br>

 	 	 	<div class="row">
 	 			<div class="col-sm-12">
 	 				<input class="centered-input larger-submit" name="client[moment-send]" type="submit" value="Send" />
 	 			</div>
 	 		</div>

 	 	<% end %>

